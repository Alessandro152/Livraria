@model Livraria.Models.Entities.Login

@{
    ViewData["Title"] = "Login";
}

<h2 style="text-align: center;">Olá! Faça seu login abaixo e tenha acesso à um universo de leitura.</h2>
<form class="LoginForm" action="AutenticarUsuario" method="get">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="email">Endereço de email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Seu email", id = "email", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label for="password">Senha</label>
        @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control", placeholder = "Senha", id = "password", autocomplete = "off"})
    </div>
    <div class="form-group form-check">
        <a href="RecuperarSenha">Esqueceu sua senha? Clique aqui</a>
        <a href="CadastrarUsuario"> | Não possui cadastro ainda? Clique aqui.</a>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

