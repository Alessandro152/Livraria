@model Livraria.Models.Entities.UsuarioCadastro
@{
    ViewData["Title"] = "CadastrarUsuario";
}

<h2>CadastrarUsuario</h2>

<form class="LoginForm" action="CadastrarUsuario" method="post">
    <div class="form-group">
        <label for="nome">Nome Completo</label>
        @Html.TextBoxFor(m => m.Usuario.UsuarioNome, new { @class = "form-control", placeholder = "Seu nome", id = "nome", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label for="endereco">Endereco</label>
        @Html.TextBoxFor(m => m.Usuario.UsuarioEndereco, new { @class = "form-control", placeholder = "Senha", id = "endereco", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label for="endereco">Telefone</label>
        @Html.TextBoxFor(m => m.Usuario.UsuarioTelefone, new { @class = "form-control", placeholder = "Telefone", id = "endereco", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        @Html.TextBoxFor(m => m.Login.UserMail, new { @class = "form-control", placeholder = "Seu e-mail", id = "email", autocomplete = "off" })
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        @Html.TextBoxFor(m => m.Login.UserPassword, new { type = "password", @class = "form-control", placeholder = "Senha", id = "senha", autocomplete = "off" })
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>